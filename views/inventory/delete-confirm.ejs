<!-- Content Heading -->

<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

    
<!-- Message Block -->
<%# messages() %>

<!-- Form -->
<<form id="deleteForm" action="/inv/del" method="post">
 <div>
  <label for="inv_make">Make:</label>
  <input type="text" id="inv_make" name="inv_make" required readonly
    value="<%= locals.inv_make %>">
  <span id="error-inv_make" class="error-message"></span>
</div>
<div>
  <label for="inv_model">Model:</label>
  <input type="text" id="inv_model" name="inv_model" required readonly
  value="<%= locals.inv_model %>">

  <span id="error-inv_model" class="error-message"></span>
</div>
<div>
  <label for="inv_year">Year:</label>
  <input type="number" id="inv_year" name="inv_year" required readonly min="1886" max="9999" 
  value="<%= locals.inv_year %>">

  <span id="error-inv_year" class="error-message"></span>
</div>

<div>
  <label for="inv_price">Price:</label>
  <input type="number" id="inv_price" name="inv_price" required readonly step="0.01" min="0" 
  value="<%= locals.inv_price %>">

  <span id="error-inv_price" class="error-message"></span>
</div>
    <button type="submit" name="submit" value="Delete Vehicle"> Delete Vehicle</button>
</div>
<div>
  <input type="hidden" name="inv_id"
  <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
  <% } %>>

</div>
</form>